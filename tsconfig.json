{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": ["dom", "es2018", "es5"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
